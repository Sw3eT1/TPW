<Window x:Class="Prezentacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Balls Simulation" Height="450" Width="800">
    <Grid>
        <Canvas Name="MainCanvas" Background="White"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Balls count:" Margin="5"/>
            <TextBox Name="BallCountTextBox" Width="50" Margin="5" Text="10"/>
            <Button Content="Start" Click="StartButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>